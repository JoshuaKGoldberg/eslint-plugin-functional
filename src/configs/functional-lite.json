{
  "extends": "./configs/recommended.json",
  "rules": {
    "ts-immutable/no-this": "error",
    "ts-immutable/no-class": "error",
    "ts-immutable/no-loop-statement": "error",
    "ts-immutable/no-throw": "error"
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {
        "ts-immutable/no-mixed-interface": "error"
      }
    }
  ]
}
